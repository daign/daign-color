{
  "name": "@daign/color",
  "version": "1.0.0",
  "description": "Simple color utils library in Typescript",
  "keywords": [
    "color",
    "gradient",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json lib/**/*.ts",
    "test": "mocha -r ts-node/register lib/**/*.spec.ts",
    "cover": "nyc mocha -r ts-node/register lib/**/*.spec.ts",
    "link": "tsc && cp -R package.json dist && cp -R README.md dist && cd dist && npm link",
    "publish": "tsc && cp -R package.json dist && cp -R README.md dist && cd dist && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daign/daign-color.git"
  },
  "author": "Jakob Mischek <jakob.mischek@daign.de> (https://github.com/daign)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daign/daign-color/issues"
  },
  "homepage": "https://github.com/daign/daign-color#readme",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.0.0",
    "source-map-support": "^0.5.10",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "@daign/math": "^1.0.0",
    "@daign/observable": "^1.0.0"
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "lib/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
